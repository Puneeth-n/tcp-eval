#!/bin/sh
alive=0;
for i in {1..40}; do 
  echo -en "\033[00m mrouter$i:"; 
  if ping -q -c 1 mrouter$i >/dev/null 2>/dev/null; then 
    echo -e "\033[01;32m online";
    ((alive++));
  else 
    echo -e "\033[01;31m offline";
  fi;
done;
echo -e "\033[00m Summary: $alive of 40 router answered a ping."
