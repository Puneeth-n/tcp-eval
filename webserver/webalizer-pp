#!/bin/sh
HTMLDIR=/var/www/website/internal_configuration/sysconf/webalizer/

TMP=`tempfile -p webal` || (echo "Could not create tempfile. Exiting"; exit 1)

for i in $HTMLDIR/*.html; do
    < $i \
    grep -v "^<TR><TH HEIGHT=4></TH></TR>$" \
    | sed -r -e 's/BGCOLOR="(#[0-9a-f]{1,6})"/STYLE="background-color: \1;"/' \
    > $TMP
    mv $TMP $i
done
